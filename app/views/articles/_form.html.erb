<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
  <div class="container bg-info p-3 rounded shadow">
    <div class="mb-3 row">
      <%= f.label :title, class: "col-sm-1 col-form-label text-light", for:"FormControlInput1" %>
      <div class="col-sm-11">
        <%= f.text_field :title, type: "text", class: "form-control shadow", id: "FormControlInput1", placeholder: "Title of Article" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :description, class: "col-sm-1 col-form-label text-light", for: "FormControlTextarea1" %>
      <div class="col-sm-11">
        <%= f.text_area :description, class: "form-control shadow", id: "FormControlTextarea1", placeholder: "Description", rows: "10" %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= f.label :category, class: "col-sm-1 col-form-label text-light", for: "FormControlTextarea1" %>
      <div class="col-sm-11">
        <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Select a category *optional*" }, { multiple: true, size: 10, class: "form-select shadow"}) %>
      </div>
    </div>
    <div class="form-group mb-3 row">
      <%= f.submit "Save Article", class:"btn btn-large btn-outline-dark text-dark shadow col-4 fs-4 offset-4", id: "submit-button" %>
    </div>
  </div>
<% end %>
<div class="text-center my-3">
  <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-decoration-none", id: "return-to-listings" %>
</div>