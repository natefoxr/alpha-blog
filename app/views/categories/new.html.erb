<h1 class="text-center my-4 lead fs-1">Create a new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, data: { turbo: false }, local: true) do |f| %>
  <div class="container bg-info p-3 rounded shadow">
    <div class="mb-3 row">
      <%= f.label :name, "Name", class: "col-sm-1 col-form-label text-light", for:"FormControlInput1" %>
      <div class="col-sm-11">
        <%= f.text_field :name, type: "text", class: "form-control shadow", id: "FormControlInput1", placeholder: "Enter category name" %>
      </div>
    </div>
    <div class="form-group mb-3 row">
      <%= f.submit "Create Category", class:"btn btn-large btn-outline-dark text-dark shadow col-4 fs-4 offset-4", id: "submit-button" %>
    </div>
  </div>
<% end %>
<div class="text-center my-3">
  <%= link_to '[ Cancle and return to categories ]', categories_path, class: "text-decoration-none", id: "return-to-listings" %>
</div>

